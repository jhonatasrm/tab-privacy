{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "1.1.0",
  "homepage_url": "https://github.com/jhonatasrm/tabs-privacy",
  "default_locale": "en",
  "author": "Jhonatas Machado",
  "applications": {
    "gecko": {
      "strict_min_version": "61.0"
    }
  },
  "icons": {
    "16": "/res/icons/icon.png",
    "32": "/res/icons/icon.png",
    "48": "/res/icons/icon.png",
    "96": "/res/icons/icon.png"
  },  
  "commands": {
    "toggle-feature": {
      "suggested_key": {
        "default": "Alt+L",
        "mac": "Alt+L",
        "linux": "Alt+L",
        "windows": "Alt+L"
      },
      "description": "__MSG_shortcut__"
    }
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": "/res/icons/privacy_off_dark_icon.png"
  },
  "background": {
    "scripts": ["/js/background.js"]
  },
  "permissions": ["tabs", "browserSettings", "activeTab", "tabHide", "<all_urls>"]
}
